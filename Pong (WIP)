location.reload(1); you.parentNode.removeChild(you); ball.parentNode.removeChild(ball); ballchangex = 0; ballchangey = 0; scorer.parentNode.removeChild(scorer); me.parentNode.removeChild(me); return; } if (ballypos <= 0) { ballchangex = 1; } if (ballxpos <= 0) { ballchangey = 1; } if (ballypos >= width - 50) { ballchangex = -1; } } function moveplayer() { if (playerxmove == 1) { if (xpos + playerspeed >= 1366 - 200) {} else { xpos = xpos + playerspeed; you.style.top = '' + xpos + 'px'; you.style.left = '' + ypos + 'px'; } } if (playerxmove == -1) { if (xpos + playerspeed <= 0) {} else { xpos = xpos - playerspeed; you.style.top = '' + xpos + 'px'; you.style.left = '' + ypos + 'px'; } } } window.addEventListener("keydown", function(event) { if (event.key == "ArrowDown") { playerxmove = 1; } if (event.key == "ArrowUp") { playerxmove = -1; } }); window.addEventListener("keyup", function(event) { if (event.key == "ArrowDown") { playerxmove = 0; } if (event.key == "ArrowUp") { playerxmove = 0; } }); function colliding() { scorer.innerText = 'score: ' + ballspeed + ''; } setInterval(colliding, 5); setInterval(moveball, 15); setInterval(bounce, 3); setInterval(moveplayer, 15); } start(); function next() { if (done >= 35) { start(); done = 0; } } function hit() { if (xpos < ballxpos + 50 && xpos + 200 > ballxpos && ypos < ballypos + 50 && ypos + 30 > ballypos) { if (xpos+35>ballxpos){ ballchangex = -1; } if (xpos+165<ballxpos){ ballchangex = 1; } ballchangey = -1; } } setInterval(next, 2); setInterval(hit, 2);})();
